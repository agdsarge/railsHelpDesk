<div class=pretty_margin>
<%= @professional.name %>

<h4>Open Tickets:</h4>
<ol>
    <% @open_tickets.each do |t| %>
        <% if t.client %>
            <%= link_to "Ticket no. #{t.id}: #{t.client.name} of #{t.client.home_address}", ticket_path(t) %></li>
        <% else %>
            <%= link_to "Ticket no. #{t.id}: OLD TICKET", ticket_path(t) %></li>
        <% end %>
    <% end %>
</ol>

<h4>Closed Tickets:</h4>
<ol>
    <% @closed_tickets.each do |t| %>        
        <li><%= link_to "Ticket no. #{t.id}: #{t.client.name} of #{t.client.home_address}", ticket_path(t) %></li>
     <% end %>
</ol>

<br>
<h4> Toolbox: </h4>
<%= link_to "Remove a client or professional", rm_user_path %>
<br>
<%= link_to "Create a new professional", new_professional_path %>


<br>
<%= button_to 'Log Out', {:controller => "sessions", :action => "destroy"}, :method=>:post %>
</div>