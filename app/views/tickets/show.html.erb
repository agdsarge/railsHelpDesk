<h1> This is ticket number <%= @ticket.id%>.</h1>

<h3> Client info: </h3>

<div><%= @ticket.client.name %></div>
<div><%= @ticket.client.email %></div>
<div><%= @ticket.client.home_address %></div>
<div><%= @ticket.client.phone_number %></div>

<br>
<h3>Assigned Professional:</h3>

<div><%= @ticket.professional.name%></div>
<div><%= @ticket.professional.email%></div>

<br>
<h4>Ticket Status:</h4>
<%= form_for @ticket do |f|%>
    <%= f.label :open, "Open", :value => "true"%>
    <%= f.radio_button :open, true %>
    <%= f.label :open, "Closed", :value => "false"%>
    <%= f.radio_button :open, false %>
    <%= f.submit%>
<% end %>
<!-- if you're a Pro, you might want a button to contact the ISP with a auto-generated form. -->
<br>


<h3> All comments for this ticket: </h3>

<% @ticket.comments.each do |cm| %>
    <div><%= cm.text %></div>
<% end %>

<h4>Add a new Comment </h4>
<% @comment = Comment.new %>
<%= form_for @comment do |f| %>
    <%= f.label :text %>
    <%= f.text_field :text %>
    <%= f.label :internal %>
    <%# if cookies[:logged_in].class == Professional %>
    <%= f.check_box :internal %>
    <%# else %>
    <%# f.hidden_field :internal :value => false %>
    <%# end %>
    <%= f.hidden_field :ticket_id, :value => @ticket.id %>
    <%# f.hidden_field :username, :value => cookies[:logged_in].username %>
    <%= f.submit%>
<% end %>
