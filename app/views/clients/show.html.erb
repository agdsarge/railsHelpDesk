<h1> Client information! </h1>

<div><%= @client.name %></div>
<div><%= @client.username %></div>
<div><%= @client.phone_number%></div>
<div><%= @client.email%></div>
<div><%= @client.home_address%></div>
<div><%= @client.isp.name%></div>

<h4>Open Tickets:</h4>
<ol>
    <% @open_tickets.each do |t| %>
        <li><%= link_to "Ticket no. #{t.id}: #{t.description}", ticket_path(t) %></li>
    <% end %>
</ol>

<h4>Closed Tickets:</h4>
<ol>
    <% @closed_tickets.each do |t| %>
        <li><%= link_to "Ticket no. #{t.id}: #{t.description}", ticket_path(t) %></li>
    <% end %>
</ol>

<br>



<% if session[:user_class] == "Professional" %>
    <%= link_to "My tickets", my_tickets_path(session[:logged_in_user_id]) %>
<% else %>
    <%= link_to "Back to the Welcome Screen", client_welcome_path %>
<%end%>
